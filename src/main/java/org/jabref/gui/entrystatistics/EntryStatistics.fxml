<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.*?>

<?import javafx.scene.image.ImageView?>
<DialogPane prefWidth="476.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.jabref.gui.entrystatistics.EntryStatisticsView">
    <buttonTypes>
        <ButtonType fx:constant="CANCEL" />
        <ButtonType fx:id="downloadButton" buttonData="OK_DONE" text="%Save" />
    </buttonTypes>
    <content>
        <VBox prefHeight="400.0" prefWidth="400.0" spacing="10.0">
            <children>
                <VBox maxWidth="Infinity">
                    <children>
                        <Label text="Citations per year" />
                        <BarChart fx:id="citationsChart">
                            <xAxis>
                                <CategoryAxis fx:id="xAxis" side="BOTTOM" />
                            </xAxis>
                            <yAxis>
                                 <NumberAxis fx:id="yAxis" side="LEFT"  />
                            </yAxis>
                        </BarChart>
                        <HBox maxWidth="Infinity" HBox.hgrow="ALWAYS" spacing="20.0">
                            <children>
                                <VBox>
                                    <Label text="Author Occurrences" />
                                    <VBox fx:id="authBox" />
                                </VBox>
                                <VBox>
                                    <Label text="Years published" />
                                    <VBox fx:id="yearBox" />
                                </VBox>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </VBox>
    </content>
</DialogPane>
